[program:minemeld-core]
environment=PATH="{{ venv_directory }}/bin",PYTHONPATH="{{ repo_directory }}",HOME="{{ data_directory }}",MINEMELD_PROTOTYPE_PATH="{{ prototypes_local_directory }}:{{ prototypes_repo_directory }}"
command={{ repo_directory }}/mm-run.py --verbose {{ config_directory }}
directory={{ data_directory }}
user=minemeld
stopwaitsecs=60
autostart=true
autorestart=true
redirect_stderr=true
killasgroup=true
stdout_logfile=/var/log/minemeld-core.log
